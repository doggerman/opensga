<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>OpenSGA</title>
    <parser>
        <target>output</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
			<item>@todo</item>
			<item>OpenSGA</item>
			<item>OPENSGA</item>
        </markers>
        <extensions>
            <extension>php</extension>
            <extension>php3</extension>
            <extension>phtml</extension>
			<extension>ctp</extension>
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>output</target>
    </transformer>
    <logging>
        <level>quiet</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="responsive" />
    </transformations>
    <files>
        <directory>app/*</directory>
    </files>
</phpdoc>